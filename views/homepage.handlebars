{{!-- includes all existing blog posts --}}
{{!-- includes post title and date created --}}

{{#each posts as |post| }}
<div class="row mb-4 ">
  <div class="col-md-5">
    <h2>
   {{post.title}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      {{post.contents}}
    </p>
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
 
</div>
{{/each}}